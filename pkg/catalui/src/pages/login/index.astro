---
import Layout from '@src/layouts/Layout.astro';
import '@src/styles/styling-vars.css';
---

<Layout title="Catalos">
	<article>
		<h1>Login</h1>
		<label
			>Username:
			<input type="text" name="suUsername" size="40/" />
		</label>
		<label
			>Password:
			<input type="text" name="suPassword" size="40/" />
		</label>
		<div>
			<button class="prim">Log in</button>
			<button>Cancel</button>
		</div>
	</article>
	<article>
		Don't have an account yet?
		<a href="signup">Sign up</a>
	</article>
</Layout>

<style>
	article {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		background-color: var(--cBg);
	}
	label {
		display: block;
	}
	button {
		font-weight: bold;
		color: var(--cLight);
		background-color: var(--c3w);
		border: none;
		border-radius: 0.4rem;
	}
	button.prim {
		background-color: var(--c1w);
	}
</style>
