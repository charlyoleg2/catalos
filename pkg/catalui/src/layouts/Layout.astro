---
//import { prefixBase } from '../lib/util.ts';
import TopMenu from '@src/components/TopMenu.astro';
import Footy from '@src/components/Footy.astro';
import '@src/styles/styling-vars.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
const base2 = base === '/' ? '/' : `${base}/`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<base href={base2} />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<TopMenu />
		<main>
			<slot />
		</main>
		<Footy />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Courier New', 'Helvetica', 'Arial', 'Verdana';
		background-color: var(--cBg);
	}
	main {
		min-height: 70vh;
	}
</style>
<style is:global>
	a {
		text-decoration: none;
	}
</style>
