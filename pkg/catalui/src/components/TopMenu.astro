---
import '@src/styles/styling-vars.css';
//import '@src/styles/utils.css';
---

<nav>
	<a href="" class="buttonTop activeButton2">Parametrix</a>
	<span>A catalog of 3D-models made with Parametrix</span>
	<a href="login" class="buttonLogin activeButton2">Log in</a>
</nav>

<style>
	nav {
		width: 100%;
		font-size: 1.3rem;
		background-color: var(--c1w);
		display: flex;
		flex-flow: row wrap;
		justify-content: space-between;
		align-items: center;
	}
	span {
		display: block;
		color: var(--c2w);
	}
	a {
		display: block;
		padding: 0.2rem 2rem;
		margin: 0.5rem 3rem;
		font-weight: bold;
	}
	a.buttonTop {
		font-size: 2rem;
		color: var(--c5b);
		border: 0.2rem;
		border-style: solid;
		border-radius: var(--cornerButton);
		border-color: var(--c2w);
		background-color: var(--c2w);
	}
	a.buttonLogin {
		color: var(--cLight);
		border: 0.2rem;
		border-style: solid;
		border-radius: var(--cornerButton);
		border-color: var(--c3w);
		background-color: var(--c3w);
	}
	a.activeButton2:hover {
		border-color: violet;
	}
</style>
