---
import type { CollectionEntry } from 'astro:content';
import DesiCard from '@src/components/DesiCard.astro';
//import { getCollection } from 'astro:content';
import '@src/styles/styling-vars.css';

interface Props {
	title: string;
	designs: CollectionEntry<'designs'>[];
}

const { title, designs } = Astro.props;
//const designs = await getCollection('designs');
---

<section>
	<h1>{title}</h1>
	{designs.slice(0, 3).map((desi) => <DesiCard design={desi} />)}
</section>

<style>
	section {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 25rem;
		background-color: var(--c4w);
		border-radius: var(--cornerSurface);
	}
	h1 {
		font-size: 2rem;
		font-weight: bold;
		color: var(--c2w);
	}
</style>
